# AI模型配置
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Gemini
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# 默认AI提供商 (openai/deepseek/gemini)
DEFAULT_AI_PROVIDER=deepseek

# 数据源配置
STOCK_DATA_SOURCE=akshare  # A股专用数据源
UPDATE_INTERVAL=300  # 数据更新间隔（秒）
CACHE_EXPIRY=1800  # 缓存过期时间（秒）

# 数据库配置
DATABASE_URL=sqlite:///./a_stock_analysis.db

# 应用配置
DEBUG=true
PORT=8000
HOST=0.0.0.0

# A股分析配置
DEFAULT_ANALYSIS_PERIOD=1y  # 默认分析周期
RISK_FREE_RATE=0.025  # 无风险利率（A股国债收益率）
MARKET_BENCHMARK=000001  # 市场基准指数（上证指数）
DEFAULT_STOCKS=000158,002261,601933,000564,600150,002456  # 默认A股代码示例